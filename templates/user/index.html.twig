{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>User Management</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    {% include 'partials/alerts.html.twig' %}

    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-8">
                        <form action="{{ path('user_index') }}">
                            <div class="input-group">
                                <input type="text" name="keyword" value="{{ keyword }}" class="form-control form-control-md"
                                       placeholder="Search Users">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-md btn-default">
                                        <i class="fa fa-search"></i>
                                        Search
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-4">
                        <div class="card-tools float-right">
                            <a href="{{ path('user_new') }}" class="btn btn-primary">
                                Create
                            </a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                    <tr>
                        <th style="width: 1%">
                            ID
                        </th>
                        <th style="width: 15%">
                            First Name
                        </th>
                        <th style="width: 15%">
                            Last Name
                        </th>
                        <th style="width: 20%">
                            Email
                        </th>
                        <th style="width: 8%" class="text-center">
                            Username
                        </th>
                        <th class="text-center" style="width: 30%">
                            Actions
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                {{ user.id }}
                            </td>
                            <td>
                                {{ user.firstName }}
                            </td>
                            <td>
                                {{ user.LastName }}
                            </td>
                            <td>
                                {{ user.email }}
                            </td>
                            <td>
                                {{ user.UName }}
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="{{ path('user_show', {'id': user.id}) }}">
                                    <i class="fas fa-folder">
                                    </i>
                                    View
                                </a>
                                <a class="btn btn-info btn-sm" href="{{ path('user_edit', {'id': user.id}) }}">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <button data-delete-url="{{ path('user_delete', {'id': user.id}) }}"
                                        class="btn btn-danger btn-sm delete-user-btn">Delete
                                </button>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>

{% endblock %}
